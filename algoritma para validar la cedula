using System;

public class Program
{
    public static bool ValidarCedulaDominicana(string cedula)
    {
        // Verificar que la cédula tenga 11 dígitos
        if (cedula.Length != 11 || !long.TryParse(cedula, out _))
        {
            return false;
        }

        int suma = 0;
        int[] pesos = { 1, 2, 1, 2, 1, 2, 1, 2, 1, 2, 1 };

        for (int i = 0; i < 11; i++)
        {
            int multiplicacion = (cedula[i] - '0') * pesos[i];

            // Si la multiplicación da un número de dos dígitos, sumamos ambos dígitos
            if (multiplicacion > 9)
            {
                multiplicacion = (multiplicacion / 10) + (multiplicacion % 10);
            }

            suma += multiplicacion;
        }

        // La cédula es válida si el resultado de la suma es múltiplo de 10
        return suma % 10 == 0;
    }

    public static void Main()
    {
        Console.WriteLine("Ingresa el número de cédula dominicana a validar:");
        string cedula = Console.ReadLine();

        if (ValidarCedulaDominicana(cedula))
        {
            Console.WriteLine("La cédula es válida.");
        }
        else
        {
            Console.WriteLine("La cédula no es válida.");
        }
    }
}
